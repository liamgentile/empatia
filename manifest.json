{
  "manifest_version": 3,
  "name": "Empatia",
  "version": "1.0",
  "description": "Real-time analysis of your social media comments to identify negative emotions, encouraging you to consider rephrasing if needed.",
  "background": {
    "service_worker": "app/scripts/preferences.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.twitter.com/*",
        "https://twitter.com/*",
        "https://www.reddit.com/*",
        "https://www.instagram.com/*",
        "https://www.facebook.com/*",
        "https://www.linkedin.com/*",
        "https://www.tiktok.com/*"
      ],
      "js": ["app/scripts/content.js"],
      "type": "module"
    }
  ],
  "action": {
    "default_popup": "app/templates/popup.html"
  },
  "permissions": ["storage", "activeTab", "tabs", "scripting"]
}
