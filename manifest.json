{
  "manifest_version": 3,
  "name": "Empatia",
  "version": "1.0",
  "description": "Real-time analysis of your social media comments to identify emotional content.",
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.reddit.com/*",
        "https://*.twitter.com/*",
        "https://*.x.com/*",
        "https://*.bsky.app/*"
      ],
      "js": ["scripts/content.js"]
    }
  ],
  "host_permissions": [
    "https://*.reddit.com/*",
    "https://*.twitter.com/*",
    "https://*.x.com/*",
    "https://*.bsky.app/*"
  ],
  "action": {
    "default_popup": "templates/popup.html"
  },
  "permissions": ["storage", "activeTab"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
